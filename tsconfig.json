{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "outDir": "./build",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}